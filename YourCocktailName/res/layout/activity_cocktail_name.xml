<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/s7ea4uh5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mjp.yourcocktailname.CocktailName" >

    <ImageView
        android:id="@+id/cocktailImageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxHeight="@dimen/pic_size"
        android:maxWidth="@dimen/pic_size"
        android:src="@drawable/image_1" />

    <TextView
        android:id="@+id/letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cocktailImageBtn"
        android:layout_alignRight="@+id/cocktailImageBtn"
        android:layout_below="@+id/cocktailImageBtn"
        android:background="#07000000"
        android:gravity="center"
        android:text="@string/letter_place"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <NumberPicker
        android:id="@+id/picker_values_name_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/letter"
        android:layout_below="@+id/letter"
        android:layout_marginLeft="28dp" />

    <NumberPicker
        android:id="@+id/picker_values_name_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/letter"
        android:layout_alignTop="@+id/picker_values_name_letter"
        android:layout_marginRight="18dp" />

</RelativeLayout>
